<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Events_Main"
    android:background="@color/background_blue"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_margin="10dp"
            android:fontFamily="@font/economicabold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="@string/event_view_title" />

        <ImageView
            android:layout_margin="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/blank_pic" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/economicaregular"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:text="Name" />

        <TextView
            android:id="@+id/logout_main"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/economicaregular"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:text="Log Out" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/economicabold"
                android:text="The" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/economicabold"
                android:text="Month" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/economicabold"
                android:text="Of" />

        </LinearLayout>

        <View
            android:layout_width="1.5dp"
            android:layout_height="70dp"
            android:background="@color/black"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/tv_currentMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="50sp"
            android:layout_margin="15dp"
            android:fontFamily="@font/economicabold"
            android:text="JAN." />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/economicabold"
                android:text="The" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/economicabold"
                android:text="Year"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <View
            android:layout_width="1.5dp"
            android:layout_height="70dp"
            android:background="@color/black"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/tv_currentYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="50sp"
            android:layout_margin="15dp"
            android:fontFamily="@font/economicabold"
            android:text="2021" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_setAlarms"
        android:layout_margin="5dp"
        android:fontFamily="@font/economicabold"
        android:textColor="@color/black"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="SET ALARMS"
        android:background="@drawable/edit_text_styled"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_eventMain_list"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>