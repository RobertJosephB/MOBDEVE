<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogIn"
    android:background="@color/background_blue"
    android:orientation="vertical"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_margin="10dp"
        android:fontFamily="@font/economicabold"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="@string/event_view_title"
        />
    <ImageView
        android:layout_margin="10dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/blank_pic"

        />
    <TextView
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fontFamily="@font/economicaregular"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:text="Name"/>
    <TextView
        android:layout_marginVertical="10dp"
        android:layout_marginStart="40dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fontFamily="@font/economicaregular"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:text="Log Out"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/economicabold"
            android:text="The"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/economicabold"
            android:text="Month"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/economicabold"
            android:text="Of"/>
        </LinearLayout>

        <View
            android:layout_width="1.5dp"
            android:layout_height="70dp"
            android:background="@color/black"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="50sp"
            android:layout_margin="15dp"
            android:fontFamily="@font/economicabold"
            android:text="JULY"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="70dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/economicabold"
                android:text="The"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/economicabold"
                android:text="Year"/>

        </LinearLayout>

        <View
            android:layout_width="1.5dp"
            android:layout_height="70dp"
            android:background="@color/black"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="50sp"
            android:layout_margin="15dp"
            android:fontFamily="@font/economicabold"
            android:text="2021"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/event_frame"
        android:layout_marginRight="30dp">
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@color/event_blue"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="25"
                android:fontFamily="@font/economicabold"
                android:textSize="40sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:text="Sunday"
                android:fontFamily="@font/economicabold"
                android:textSize="35sp"/>
        </LinearLayout>

        <TextView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="@color/black"
            android:fontFamily="@font/economicabold"
            android:textSize="30sp"
            android:text="Edit Event"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
        <TextView
            android:layout_margin="10dp"
            android:fontFamily="@font/economicabold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="Event Title:"
            />
        <EditText
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/edit_text_styled"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:textAlignment="center"
            android:fontFamily="@font/economicaregular"
            android:text="Event Name"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_margin="10dp"
                android:fontFamily="@font/economicabold"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="Time:"
                />

            <EditText
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="110dp"
                android:background="@drawable/edit_text_styled"
                android:fontFamily="@font/economicaregular"
                android:text="Event Name"
                android:textAlignment="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/economicabold"
                android:text="Event Details:"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="50dp"
                android:background="@drawable/edit_text_styled"
                android:fontFamily="@font/economicaregular"
                android:padding="10dp"
                android:text=""
                android:textAlignment="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_margin="10dp"
                android:fontFamily="@font/economicabold"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="Alarm Settings:"
                />
            <EditText
                android:layout_margin="10dp"
                android:background="@drawable/edit_text_styled"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:textAlignment="center"
                android:fontFamily="@font/economicaregular"
                android:text="Event Name"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_margin="10dp"
                android:fontFamily="@font/economicabold"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="Event Title:"
                />
            <EditText
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="50dp"
                android:background="@drawable/edit_text_styled"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:textAlignment="center"
                android:fontFamily="@font/economicaregular"
                android:text="Event Name"/>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>